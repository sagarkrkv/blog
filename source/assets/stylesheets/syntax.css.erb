<%= Rouge::Themes::Github.render(:scope => '.highlight') %>

.highlight {
  padding: 1.2em 2.4em !important;
  margin-bottom: 1.875em;
  overflow: hidden;
  overflow-x: auto;
  border-radius: 0;
  position: relative;
}

<%#
.highlight:before,
.highlight:after {
  content: "";
  display: block;
  background: #3b3b3b;
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
}%>

<%#.highlight:before {
  transform: translateX(-100%);
}

.highlight:after {
  transform: translateX(100%);
}%>

.highlight,
.highlight pre {
  background-color: rgba(0, 0, 0, 0.05);
  font-size: .8rem;
  border: none;
}

.highlight code {
  font-size: .8rem;
  font-weight: 300;
  padding: 0;
  margin: 0;
  border: none;
}

.highlight.sass .err {
  background-color: transparent;
}
